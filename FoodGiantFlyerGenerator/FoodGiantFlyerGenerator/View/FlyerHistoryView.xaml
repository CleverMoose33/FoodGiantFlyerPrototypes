<Window x:Class="FoodGiantFlyerGenerator.FlyerHistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodGiantFlyerGenerator"
        xmlns:cal="http://www.caliburnproject.org"
        Title="{Binding Title}" 
        MinHeight="300" MinWidth="800"
        Height="300" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/DefaultStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="3" Content="Select a Previously-Created Flyer"  Style="{StaticResource LblHeaderStyle}" />

        <RadioButton Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Find all created flyers"
                         GroupName="SortType" cal:Message.Attach="GetAllFlyerHistoryItems()"/>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <RadioButton Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" 
                     Content="Sort by user"  GroupName="SortType" cal:Message.Attach="GetFlyerHistoryItemsByUser()"/>
            <ComboBox Grid.Row="1" ItemsSource="{Binding ManagerListCmboBox}" 
                          SelectedItem="{Binding SelectedManager}" Style="{StaticResource CmboBoxStyle}" cal:Message.Attach="ManagerListCmboBox_SelectionChanged($source)" />
        </Grid>

        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <RadioButton Grid.Row="0"  Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center" Content="Sort by sale start date"
                         GroupName="SortType" cal:Message.Attach="PickDateSearchType($source)"/>
            <RadioButton Grid.Row="0"  Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Content="Sort by sale end date"
                         GroupName="SortType" cal:Message.Attach="PickDateSearchType($source)"/>
            <RadioButton Grid.Row="0"  Grid.Column="2"  HorizontalAlignment="Center" VerticalAlignment="Center" Content="Sort by flyer creation date"
                         GroupName="SortType" cal:Message.Attach="PickDateSearchType($source)"/>
            <DatePicker Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" cal:Message.Attach="GetAllFlyerHistoryItemsByDate($source)" Visibility="{Binding DatePickerVis}"/>
        </Grid>

        <ComboBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" ItemsSource="{Binding ItemNameList}" Style="{StaticResource CmboBoxStyle}"
                              cal:Message.Attach="ItemListCmboBox_SelectionChanged($source)">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Label Style="{StaticResource LblStyle}" Content="{Binding ManagerName}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Grid.ColumnSpan="3" Grid.Row="3" Content="Generate Flyer" cal:Message.Attach="GenerateFlyer()"/>
    </Grid>
</Window>
