<UserControl x:Class="FoodGiantFlyerGenerator.FlyerItemView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodGiantFlyerGenerator"
        xmlns:cal="http://www.caliburnproject.org">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/DefaultStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" SharedSizeGroup="ItemGroup"/>
            <ColumnDefinition Width="1*" SharedSizeGroup="ItemGroup"/>
            <ColumnDefinition Width="1*" SharedSizeGroup="ItemGroup"/>
            <ColumnDefinition Width="1*" SharedSizeGroup="ItemGroup"/>
            <ColumnDefinition Width="3*" SharedSizeGroup="ItemGroup"/>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Column="0" x:Name="itemCmboBox" Style="{StaticResource CmboBoxStyle}" ItemsSource="{Binding ItemNameList}"
                              cal:Message.Attach="ItemListCmboBox_SelectionChanged($source)" >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Label Style="{StaticResource LblStyle}" Content="{Binding ItemName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <!--Item Price-->
        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding PriceTxtBlk}" Style="{StaticResource TxtBoxStyle}"/>
        <!--Make into text box, prompt user to enter item size-->
        <!--Item Size-->
        <ComboBox Grid.Column="2"  ItemsSource="{Binding ItemSizeList}" Style="{StaticResource CmboBoxStyle}"
                              cal:Message.Attach="ItemSizeCmboBox_SelectionChanged($source)"/>
        <!--Item Description-->
        <TextBox Grid.Column="3" Text="{Binding ItemDesTxtBlk}" Style="{StaticResource TxtBoxStyle}"/>
        
        <!--Borders and Images-->
        <Grid Grid.Column="4" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" SharedSizeGroup="ItemGroup"/>
                <ColumnDefinition Width="1*" SharedSizeGroup="ItemGroup"/>
                <ColumnDefinition Width="1*" SharedSizeGroup="ItemGroup"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="{Binding BdrBrsh1}" Style="{StaticResource BdrStyle}">
                <Image Grid.Column="0" Source="{Binding ImgSrc1}" cal:Message.Attach="[Event MouseLeftButtonDown] = [Action ImgSrc1Changed()]"/>
            </Border>
            <Border Grid.Column="1" BorderBrush="{Binding BdrBrsh2}" Style="{StaticResource BdrStyle}">
                <Image Grid.Column="1" Source="{Binding ImgSrc2}" cal:Message.Attach="[Event MouseLeftButtonDown] = [Action ImgSrc2Changed()]"/>
            </Border>
            <Border Grid.Column="2" BorderBrush="{Binding BdrBrsh3}" Style="{StaticResource BdrStyle}">
                <Image Grid.Column="2" Source="{Binding ImgSrc3}" cal:Message.Attach="[Event MouseLeftButtonDown] = [Action ImgSrc3Changed()]"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
